<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#534A4A"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Cozum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="40dp"></TextView>

    <TextView

        android:id="@+id/Sonuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="70dp"></TextView>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingVertical="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_Sil"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FF1313"
                android:text="SÄ°L"
                android:textSize="20dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_Parantezac"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FAB531"
                android:text="("
                android:textSize="20dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_Parantezkapa"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FAB531"
                android:text=")"
                android:textSize="20dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_Bol"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FAB531"
                android:text="/"
                android:textSize="20dp"
                app:cornerRadius="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#316BCF"
                android:text="7"
                android:textSize="20dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#316BCF"
                android:text="8"
                android:textSize="20dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#316BCF"
                android:text="9"
                android:textSize="20dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_Carp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FAB531"
                android:text="*"
                android:textSize="20dp"
                app:cornerRadius="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#316BCF"
                android:text="4"
                android:textSize="20dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#316BCF"
                android:text="5"
                android:textSize="20dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#316BCF"
                android:text="6"
                android:textSize="20dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_Cikart"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FAB531"
                android:text="-"
                android:textSize="20dp"
                app:cornerRadius="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#316BCF"
                android:text="1"
                android:textSize="20dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#316BCF"
                android:text="2"
                android:textSize="20dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#316BCF"
                android:text="3"
                android:textSize="20dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_Topla"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FAB531"
                android:text="+"
                android:textSize="20dp"
                app:cornerRadius="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_AC"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#876868"
                android:text="AC"
                android:textSize="20dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_0"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#316BCF"
                android:text="0"
                android:textSize="20dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_Virgul"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#316BCF"
                android:text=","
                android:textSize="20dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_Esittir"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#18BA1B"
                android:text="="
                android:textSize="20dp"
                app:cornerRadius="40dp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>